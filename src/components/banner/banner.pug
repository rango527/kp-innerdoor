script.
  var grid = document.getElementById("banner-footer").children;
  var baseOffset = grid[0].offsetTop;
  var lastOffset = grid[grid.length - 1].offsetTop;
  if (lastOffset > baseOffset) {
    document.getElementById("banner-footer").classList.add('flex-column');
  }
