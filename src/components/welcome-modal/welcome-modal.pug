#welcome-modal.modal-pattern(aria-hidden="true" data-analytics-location="modal-welcome-modal")
  .modal-container
    .modal-inner.modal-icons-enabled(aria-label="Welcome" role="dialog" tabindex="-1")
      button.-close--small(aria-label="Close" data-analytics-click="Close [X] Modal" data-analytics-type="button" data-dismiss="x-close")
        img(src="assets/images/icon-close.svg" alt="")
        | Close
      .modal-header
        p#modal-title-1.modal-title What's new
      .modal-content
        .modal-content-body
          img.welcome-modal-img(src='assets/images/welcome-modal-img-1.svg')
          p.welcome-modal-title Stay on top of your health with timely reminders</p>
          p Get a personalized cost estimate for most prescriptions based on your health plan with our new drug pricing tool.
          .welcome-modal-footer
            .welcome-modal-footer-frame
              input#do-not-show(type="checkbox")
              label#do-not-show-checkbox(for="do-not-show" tabindex="0" aria-checked="false") Don't show again
            button.button(type="button") Close
    .modal-fade-screen

//- Trigger to be placed in markup
.rows
  .columns-3
    button.button.modal-button.welcome-modal-button(data-modal-trigger="welcome-modal") Welcome Modal
